<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    配置LoginServlet：配置LoginServlet与处理请求的一个映射-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.krmzyc.Log.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
<!--    注册映射-->
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.krmzyc.Log.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>changepsw</servlet-name>
        <servlet-class>com.krmzyc.Log.Changepsw</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>changepsw</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sendms</servlet-name>
        <servlet-class>com.krmzyc.Log.SendMS</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sendms</servlet-name>
        <url-pattern>/sendms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>codelog</servlet-name>
        <servlet-class>com.krmzyc.Log.Codelog</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>codelog</servlet-name>
        <url-pattern>/codelog</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>findpsw</servlet-name>
        <servlet-class>com.krmzyc.Log.Findpsw</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findpsw</servlet-name>
        <url-pattern>/findpsw</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>sendfind</servlet-name>
        <servlet-class>com.krmzyc.Log.SendFind</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendfind</servlet-name>
        <url-pattern>/sf</url-pattern>
    </servlet-mapping>

</web-app>